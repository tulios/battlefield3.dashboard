<div class="leaderboard-venice-rowlist">
	<div class="leaderboard-venice-rowlist-left">
		<div style="text-decoration: none;" id="Mp_Main_Score" href="#">
			<div class="leaderboard-venice-rowlist-icon">
				<img src="http://battlelog-cdn.battlefield.com/public/leaderboard/icons/Mp_Main_Seconds.png?v=3173239">
			</div>
			<div class="leaderboard-venice-rowlist-left-info ">
				<div class="leaderboard-venice-rowlist-left-info-title">HIGHEST PLAYTIME</div>
				<div class="leaderboard-venice-rowlist-left-info-scoretype">Time Played</div>
			</div>
		</div>
	</div>						 		
	<div class="leaderboard-venice-rowlist-middle ">
		<div class="wrapper">
			<%= partial :"leaderboard/soldier", collection: @highest_playtime, 
				locals: {
					:score_formater => lambda {|soldier|
						time_played = soldier.time_played.to_i
						mins  = (time_played / 60) % 60
						hours = time_played / (60 * 60)
					
						"#{hours}h #{mins}m"
					} 
				} %>
		</div>
	</div>
</div>
