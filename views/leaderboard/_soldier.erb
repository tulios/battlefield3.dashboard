<div class="leaderboard-venice-rowlist-middle-user bubble-title">
	<div class="leaderboard-venice-rowlist-middle-user-avatar">
		<div rel="<%= soldier.id %>" class="base-avatar-container base-avatar-size-large">
			<a href="<%= soldier.url %>" class="base-avatar-status-overlay base-avatar-status-overlay-offline" target="_blank">
				<img src="<%= soldier.picture %>" width="52" height="52">
			</a>
		</div>
	</div>
	<div class="leaderboard-venice-rowlist-middle-user-username">
		<%= "#{soldier_counter + 1}ยบ" %>
		<a class="base-profile-link" href="<%= soldier.url %>" target="_blank">
			<%= soldier.name %>
		</a> 
	</div>
	<div class="leaderboard-venice-rowlist-middle-user-score">
		<%= score_formater.call(soldier) %>
	</div>
	<div class="platform <%= soldier.namespace %>"></div>
</div>